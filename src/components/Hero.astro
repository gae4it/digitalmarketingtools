---

import type { HeroProps, HeroCTAButton } from "@/data/hero";

const {
  title,
  subtitle,
  imageSrc,
  imageAlt = title,
  ctaButtons = [],
} = Astro.props as HeroProps;

---

<section class="relative overflow-hidden bg-[#121212]">
  <div class="container px-8 py-5 lg:py-8 mx-auto xl:px-5 max-w-screen-lg relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

      <!-- Text Content -->
      <div class="order-2 lg:order-1">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight mb-6">
          {title}
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-2xl">
          {subtitle}
        </p>
        
        <!-- CTA Buttons -->
        {ctaButtons && ctaButtons.length > 0 && (
          <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            {ctaButtons.map((btn) => (
              <a
                href={btn.href}
                class={
                  btn.style === 'secondary'
                    ? "inline-flex items-center px-6 py-3 bg-transparent border-2 border-blue-600 text-blue-600 dark:text-blue-400 hover:bg-blue-600 hover:text-white font-semibold rounded-lg transition-colors duration-200"
                    : "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors duration-200 shadow-lg"
                }
              >
                {btn.label}
              </a>
            ))}
          </div>
        )}
      </div>
      
      <!-- Image -->
      <div class="hero-image order-1 lg:order-2">
        <div class="relative">
          <img 
            src={imageSrc} 
            alt={imageAlt}
            class="w-full h-auto rounded-2xl shadow-2xl transform hover:scale-105 transition-transform duration-300"
            loading="eager"
          />
          <!-- Decorative gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-tr from-blue-500/10 to-purple-500/10 rounded-2xl pointer-events-none"></div>
        </div>
      </div>
    </div>
  </div>
  
</section>
