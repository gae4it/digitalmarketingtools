---
// ToolCard.astro
// DRY card component for tools and blog style
const { tool } = Astro.props;
---
<div class="bg-white dark:bg-[#1a2636] rounded-xl overflow-hidden shadow-md flex flex-col h-full">
  <div class="w-full h-24 bg-black flex items-center justify-center rounded-t-xl">
    <img
      src={`https://cdn.simpleicons.org/${tool.title.replace(/\s+/g, '').toLowerCase()}/FFFFFF`}
      alt={tool.title + ' logo'}
      width="48"
      height="48"
      class="object-contain"
      loading="lazy"
      onError="this.onerror=null;this.src='https://cdn.simpleicons.org/simpleicons/FFFFFF'"
    />
  </div>
  <div class="p-5 flex flex-col flex-1">
    <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-2 text-center">{tool.title}</h3>
    <p class="text-gray-500 dark:text-gray-300 text-sm mb-4 text-center">{tool.desc}</p>
    <a href={tool.url} target="_blank" rel="noopener" class="mt-auto px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-sm font-medium w-auto mx-auto">More info</a>
  </div>
</div>
