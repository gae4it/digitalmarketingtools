---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import { Image, getImage } from "astro:assets";
import { authors } from "@/data/authors";
import Pagetitle from "@/components/pagetitle.astro";
import Link from "@/components/ui/link.astro";

---

<Layout title="Tools">
  <Container>
    <Pagetitle>
      <Fragment slot="title">Tools</Fragment>
      <Fragment slot="desc">Here an amazing collection of tools</Fragment>
    </Pagetitle>

      <div class="flex flex-wrap justify-center gap-8 mt-12">
      {
        [
          {
            title: 'Ahrefs',
            desc: 'SEO toolset per analisi backlink, keyword e competitor.',
            url: 'https://ahrefs.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Figma',
            desc: 'Design collaborativo di interfacce e prototipi.',
            url: 'https://figma.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Canva',
            desc: 'Crea grafiche e contenuti visivi facilmente.',
            url: 'https://canva.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Semrush',
            desc: 'Suite completa per SEO, PPC e content marketing.',
            url: 'https://semrush.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Google Analytics',
            desc: 'Analisi dettagliata del traffico web.',
            url: 'https://analytics.google.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Mailchimp',
            desc: 'Email marketing e automazioni semplici.',
            url: 'https://mailchimp.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Hootsuite',
            desc: 'Gestione centralizzata dei social media.',
            url: 'https://hootsuite.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Buffer',
            desc: 'Pianifica e pubblica post sui social network.',
            url: 'https://buffer.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Zapier',
            desc: 'Automatizza workflow tra app e servizi.',
            url: 'https://zapier.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Trello',
            desc: 'Organizza progetti e task in modo visuale.',
            url: 'https://trello.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Hotjar',
            desc: 'Heatmap e analisi comportamento utenti.',
            url: 'https://hotjar.com',
            img: '/opengraph.jpg',
          },
          {
            title: 'Google Tag Manager',
            desc: 'Gestione avanzata dei tag di tracking.',
            url: 'https://tagmanager.google.com',
            img: '/opengraph.jpg',
          },
        ].map((tool) => (
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-md flex flex-col items-center w-full sm:w-[45%] md:w-[22%] max-w-xs p-5 mb-6 transition hover:shadow-xl">
            <img src={tool.img} alt={tool.title} class="w-full h-32 object-cover rounded-t-lg mb-4" loading="lazy" />
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-2 text-center">{tool.title}</h3>
            <p class="text-gray-500 dark:text-gray-300 text-sm mb-4 text-center">{tool.desc}</p>
            <a href={tool.url} target="_blank" rel="noopener" class="mt-auto px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-sm font-medium">Visita</a>
          </div>
        ))
      }
    </div>

  </Container>
</Layout>
