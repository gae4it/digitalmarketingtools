---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import { Image, getImage } from "astro:assets";
import bookmarks from "@/data/bookmarks.json";
import Pagetitle from "@/components/pagetitle.astro";
import Link from "@/components/ui/link.astro";

---

<Layout title="Tools">
  <Container>
    <Pagetitle>
      <Fragment slot="title">Tools</Fragment>
      <Fragment slot="desc">Here an amazing collection of tools</Fragment>
    </Pagetitle>

    <div class="flex flex-wrap justify-center gap-8 mt-12">
      {
        bookmarks.map((tool) => (
          <div class="bg-white dark:bg-[#1a2636] rounded-xl shadow-md flex flex-col items-center w-full sm:w-[45%] md:w-[22%] max-w-xs p-5 mb-6 transition hover:shadow-xl">
            <img src={tool.img} alt={tool.title} class="w-full h-32 object-cover rounded-t-lg mb-4" loading="lazy" />
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-2 text-center">{tool.title}</h3>
            <p class="text-gray-500 dark:text-gray-300 text-sm mb-4 text-center">{tool.desc}</p>
            <a href={tool.url} target="_blank" rel="noopener" class="mt-auto px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-sm font-medium">More info</a>
          </div>
        ))
      }
    </div>

  </Container>
</Layout>
